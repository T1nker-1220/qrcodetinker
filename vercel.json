{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "src/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/api.py"
    },
    {
      "src": "/css/(.*)",
      "dest": "src/frontend/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "src/frontend/js/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/html/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "ALLOWED_ORIGINS": "https://qrcodetinker.vercel.app",
    "PYTHONUNBUFFERED": "1",
    "DEBUG": "true"
  }
}
