{
  "version": 2,
  "builds": [
    {
      "src": "src/backend/api.py",
      "use": "@vercel/python"
    },
    {
      "src": "src/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/html/$1"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "ALLOWED_ORIGINS": "https://your-production-url.com"
  }
}
